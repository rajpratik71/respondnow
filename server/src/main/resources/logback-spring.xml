<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Property for log pattern -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
    
    <!-- Console Appender for Development -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    
    <!-- Main Application Log File -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/respondnow.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/archived/respondnow-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    
    <!-- API Access Log - Separate file for API calls -->
    <appender name="API_ACCESS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/api-access.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/archived/api-access-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Security/Audit Log - Critical for compliance -->
    <appender name="SECURITY" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/security.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/archived/security-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Database Operations Log -->
    <appender name="DATABASE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/database.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/archived/database-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    
    <!-- Error Log - All errors in one place -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/archived/error-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    
    <!-- Logger Configurations -->
    
    <!-- Controllers - INFO level -->
    <logger name="io.respondnow.controller" level="INFO">
        <appender-ref ref="API_ACCESS"/>
    </logger>
    
    <!-- Services - DEBUG level for detailed business logic -->
    <logger name="io.respondnow.service" level="DEBUG"/>
    
    <!-- Repositories - DEBUG level for DB operations -->
    <logger name="io.respondnow.repository" level="DEBUG">
        <appender-ref ref="DATABASE"/>
    </logger>
    
    <!-- Security - INFO level, separate file -->
    <logger name="io.respondnow.security" level="INFO" additivity="false">
        <appender-ref ref="SECURITY"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    
    <!-- MongoDB Driver Logs -->
    <logger name="org.springframework.data.mongodb.core" level="DEBUG" additivity="false">
        <appender-ref ref="DATABASE"/>
    </logger>
    
    <logger name="org.mongodb.driver" level="INFO" additivity="false">
        <appender-ref ref="DATABASE"/>
    </logger>
    
    <!-- Spring Security -->
    <logger name="org.springframework.security" level="INFO"/>
    
    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>
    
</configuration>
