import React, { useState } from 'react';
import { useGroups, useDeleteGroupMutation } from '@services/server/hooks/useGroupManagement';
import { Group } from '@services/server/types/UserManagement';

export const GroupList: React.FC = () => {
  const { data: groups, isLoading, error } = useGroups();
  const deleteGroup = useDeleteGroupMutation();
  const [selectedGroup, setSelectedGroup] = useState<Group | null>(null);

  const handleDelete = (groupId: string, groupName: string) => {
    if (window.confirm(`Are you sure you want to delete group "${groupName}"?`)) {
      deleteGroup.mutate(groupId);
    }
  };

  if (isLoading) {
    return <div className="loading">Loading groups...</div>;
  }

  if (error) {
    return <div className="error">Error loading groups</div>;
  }

  return (
    <div className="group-management">
      <div className="header">
        <h2>Group Management</h2>
        <button className="btn-primary">
          + Create Group
        </button>
      </div>

      <div className="table-container">
        <table className="groups-table">
          <thead>
            <tr>
              <th>Group Name</th>
              <th>Description</th>
              <th>Members</th>
              <th>Roles</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {groups?.map((group) => (
              <tr key={group.id} onClick={() => setSelectedGroup(group)}>
                <td><strong>{group.name}</strong></td>
                <td>{group.description || '-'}</td>
                <td>
                  <span className="badge">{group.memberCount} members</span>
                </td>
                <td>
                  <div className="roles">
                    {group.roleNames?.length > 0
                      ? group.roleNames.map((role) => (
                          <span key={role} className="role-badge">
                            {role}
                          </span>
                        ))
                      : <span className="text-muted">No roles</span>
                    }
                  </div>
                </td>
                <td>
                  <div className="actions">
                    <button className="btn-secondary btn-sm">
                      Edit
                    </button>
                    <button
                      className="btn-danger btn-sm"
                      onClick={(e) => {
                        e.stopPropagation();
                        handleDelete(group.id, group.name);
                      }}
                    >
                      Delete
                    </button>
                  </div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>

        {groups?.length === 0 && (
          <div className="empty-state">
            <p>No groups found. Create your first group to get started.</p>
          </div>
        )}
      </div>

      {selectedGroup && (
        <div className="group-details">
          <h3>{selectedGroup.name}</h3>
          <p>{selectedGroup.description}</p>
          <div className="members-list">
            <h4>Members ({selectedGroup.memberCount})</h4>
            {/* List members here */}
          </div>
        </div>
      )}
    </div>
  );
};
